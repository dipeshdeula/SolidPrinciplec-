@model List<Student>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<style>
    .card-container {
        display: flex;
        flex-direction:column;
        gap: 1rem;
        justify-content: center;
    }
</style>

<h1 class="text-center">Hello Index Page</h1>

<div class="container">
    <div class="row card-container">
        @foreach (var student in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">List of Student</h2>
                        <h3 class="card-subtitle mb-2 text-body-secondary">Id: @student.Id</h3>
                        <h3 class="card-subtitle mb-2 text-body-secondary">Name: @student.Name</h3>
                        <h3 class="card-subtitle mb-2 text-body-secondary">Address: @student.Address</h3>
                        <a asp-action="Details" asp-route-id="@student.encId" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
